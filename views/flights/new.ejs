<%- include('../partials/header') %>
<div class="addBoxMain">
<form id="new-form" action="/flights" method="POST">
        <div class="addBox">
            <label for="">Airport:</label>
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DAL">DAL</option>
                <option value="LAX">LAX</option>
                <option value="SEA">SEA</option>
            </select>
            <label>Airline:</label>
            <select name="airline" id="box">
                <option value="American">American</option>
                <option value="Southwest">Southwest</option>
                <option value="United">United</option>
            </select>
            <label>Flight Number:</label>
            <input type="text" name="flightNo">
            <label>Departure:</label>
            <input type="date" name="departs">
            <input type="submit" value="Add Flight" class="submit">
        </form>
        
    </div>
</div>
<%- include('../partials/footer') %>